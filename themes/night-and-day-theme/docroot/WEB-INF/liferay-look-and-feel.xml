<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.0+</version>
	</compatibility>
	<theme id="night-and-day" name="Night and Day Theme">
		<color-scheme id="default" name="Night">
			<css-class>night</css-class>
		</color-scheme>
		<color-scheme id="day" name="Day">
			<css-class>day</css-class>
			<color-scheme-images-path>${images-path}/color_schemes/day</color-scheme-images-path>
		</color-scheme>
	</theme>
</look-and-feel>